@model Tire

<div class="col-lg-4">
    <img class="img-thumbnail" src="/img/@Model.Image" alt="@Model.Brand" />
    <h2>@Model.Brand</h2>
    <h2>@Model.Model</h2>
    <p>Size: @Model.Size</p>
    <p>Price: @Model.Price.ToString("c")</p>
    <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="addToCart" asp-route-id="@Model.Id">Add to cart</a></p>
</div>
